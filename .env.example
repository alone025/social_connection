# ============================================
# Conference Networking Bot - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ============================================
# Required Configuration
# ============================================

# Telegram Bot Token
# Get it from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=token

# MongoDB Connection String
# Format: mongodb://[username:password@]host[:port][/database][?options]
# Examples:
#   - Local: mongodb://localhost:27017/conference_networking
#   - Atlas: mongodb+srv://user:pass@cluster.mongodb.net/dbname
MONGODB_URI=mongodb://localhost:27017/conference_networking

# Second Screen API Key
# Generate a strong random string for securing second screen endpoints
# This key is required for accessing second screen REST API and Socket.IO
# Example: openssl rand -hex 32
SECOND_SCREEN_API_KEY=Second-screen-key

# Main Admin Telegram IDs
# Comma-separated list of Telegram user IDs who have main admin privileges
# You can get your Telegram ID from @userinfobot
MAIN_ADMIN_TELEGRAM_IDS=telegram_id

# ============================================
# Optional Configuration
# ============================================

# Server Port
# Default: 3000
PORT=3000

# Base URL for Second Screen Links
# Used when generating second screen URLs in bot messages
# Use BASE_URL or SERVER_URL (BASE_URL takes precedence)
# Examples:
#   - Development: http://localhost:3000
#   - Production: https://yourdomain.com
BASE_URL=http://localhost:3000
# SERVER_URL=http://localhost:3000

# Node Environment
# Options: development, staging, production
# Default: development
NODE_ENV=development
